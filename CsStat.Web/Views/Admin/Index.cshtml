@model List<CsStat.Web.Models.PlayerModelDto>
<style>
    th, td {
        padding: 3px;
    }
</style>
<form method="post" action="@Url.Action("Update",Model)">
    <table class="table-striped">
        <tr>
            <th></th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Image Path</th>
        </tr>
        @for (var i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>@Html.EditorFor(model=> model[i].NickName)</td>
                <td>@Html.EditorFor(model => model[i].FirstName)</td>
                <td>@Html.EditorFor(model => model[i].SecondName)</td>
                <td>@Html.EditorFor(model => model[i].ImagePath)</td>
            </tr>
        }
    </table>

    <button type="submit" class="btn btn-sm btn-primary">Save</button>
</form>
