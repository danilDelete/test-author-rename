@model CsStat.Domain.Entities.UsefulInfo

@using (Html.BeginForm("Save", "UsefulLinks", FormMethod.Post,new { enctype = "multipart/form-data" }))
{
    <form style="border: black 1px solid; display: inline-block; margin-top: 15px;" method="post">
        <label for="caption">Caption</label>
        @Html.EditorFor(x => x.Caption, new { id = "caption", name = "caption" }) <br />
        <label for="description">Description</label>
        @Html.EditorFor(x => x.Description, new { id = "description", name = "description" }) <br />
        <label for="url">URL</label>
        @Html.EditorFor(x => x.Url, new { id = "url", name = "url" }) <br />
        <input type="hidden" id="id" name="Id" value="@Model.Id">
        <label for="image">Image</label>
        @Html.EditorFor(x => x.Image, new { htmlAttributes = new { @class = "form-control", @type = "file", id = "image", name = "image" } })
        <input type="submit" value="Save" />
    </form>
}
